@page
@model CroweContacts.Pages.Contact.IndexModel
<p>
    <a asp-page="Create">Create New Contact</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContactVm[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactVm[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactVm[0].SSN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactVm[0].DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactVm[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactVm[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactVm[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactVm[0].PostalCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ContactVm) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SSN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ContactId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ContactId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ContactId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
