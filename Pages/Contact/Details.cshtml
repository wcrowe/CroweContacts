@page
@using CroweContacts.Models.ContactVM
@model CroweContacts.Pages.Contact.DetailsModel

<div>
    <h4>Contacts</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactVm.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactVm.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactVm.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactVm.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactVm.SSN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactVm.SSN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactVm.DOB)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactVm.DOB)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactVm.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactVm.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactVm.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactVm.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactVm.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactVm.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactVm.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactVm.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactVm.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactVm.PostalCode)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ContactVm.ContactId">Edit</a> |
    <a asp-page="./Index">Back to List</a> |
    <a asp-page="/phone/Create" asp-route-id="@Model.ContactVm.ContactId">Add Phone Number</a>
</div>
<div>
    <table class="table">
        <thead>
        <tr>
            <th>
               Device
            <th>
               Number
            </th>
            <th>
                Extension
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.ContactVm.Phones)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Device)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Extension)
                </td>
                <td>
                    <a asp-page="/phone/Edit" asp-route-id="@item.PhoneId">Edit</a> |
                    <a asp-page="/phone/Delete" asp-route-id="@item.PhoneId">Delete</a> 
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>
