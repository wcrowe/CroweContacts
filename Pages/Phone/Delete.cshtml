@page
@model CroweContacts.Pages.Phone.DeleteModel

<div>
    <h4>Delete Phone Number</h4>
    <hr />
    <h3 class="alert-danger">Are you sure you want to delete this phone number?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneVm.Device)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneVm.Device)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneVm.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneVm.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneVm.Extension)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneVm.Extension)
        </dd>
    </dl>
    @Html.HiddenFor(model => model.PhoneVm.ContactId)
    <form method="post">
        <input type="hidden" asp-for="PhoneVm.PhoneId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <div>
            <a href="@Url.Page("/Contact/Details", new {id = Model.PhoneVm.ContactId})">Back To Contact</a>
        </div>
    </form>
</div>
